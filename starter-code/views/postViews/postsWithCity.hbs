<h1>post with city</h1>


<a href="/posts/create-new/{{theCountry}}/{{theCity}}">Create a new Post</a>

<div class="dropdown">
  <button onclick="myFunction()" class="dropbtn">Select Countries</button>
  <div id="myDropdown" class="dropdown-content">
    {{#each countries}}
        <a href='/posts/{{this}}'>{{this}}</a>
    {{/each}}
  </div>
</div>


<div class="dropdown">
  <button onclick="myFunction()" class="dropbtn">Select Cities</button>
  <div id="myDropdown" class="dropdown-content">  
    {{#each cities}}
        <a href='/posts/{{../country}}/{{this}}'>{{this}}</a>
    {{/each}}
  </div>
</div>



{{#each posts}}

<div>
    <hr>

    <h3>{{this.title}}</h3>

    <p>{{this.content}}</p>

    <p>by: {{this.author.username}}</p>

    <hr>

    {{#if this.owned}}
    <form action="/posts/delete/{{this._id}}/{{this.country}}/{{this.city}}" method="POST">
      <button>Delete This Post</button>
    </form>
    
    <button>

      <a href="/posts/edit/{{this._id}}/city">Edit This Post</a>

    </button>
    {{/if}}

</div>

{{/each}}