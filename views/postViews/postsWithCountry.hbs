<h1>posts with Country</h1>

<div class="dropdown">
  <button onclick="myFunction()" class="dropbtn">Select Cities</button>
  <div id="myDropdown" class="dropdown-content">  
    {{#each cities}}
        <a href='/posts/{{../country}}/{{this}}'>{{this}}</a>
    {{/each}}
  </div>
</div>


<a href="/posts/create-new/{{country}}">Create a new Post</a>


{{#each posts}}

<div>
    <hr>

    <h3>{{this.title}}</h3>

    <p>{{this.content}}</p>

    <p>by: {{this.author.username}}</p>

    <hr>

    {{#if this.owned}}

    <form action="/posts/delete/{{this._id}}/{{this.country}}" method="POST">
      <button>Delete This Post</button>
    </form>

    <button>

      <a href="/posts/edit/{{this._id}}/country">Edit This Post</a>

    </button>
    {{/if}}
    
    <div class="comments-sec">
      {{#each this.comments}}
        <h5>by {{this.author.username}}</h5>
        <p>{{this.content}}</p>
        {{#if this.owned}}
          <button class='comment-delete' name={{../this._id}} id={{this._id}}>Delete</button>
        {{/if}}
      {{/each}}
    </div>

    <div>
      <h5>comments</h5>
      <input type="text" class='comments' id={{this._id}}>
      <button class='comments-btn'>reply</button>
    </div>
    
</div>

{{/each}}

