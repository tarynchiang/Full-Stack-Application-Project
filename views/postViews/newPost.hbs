<h1>Create a new Post</h1>

<form action="/posts/create-new" method="POST" enctype="multipart/form-data">
    <label>Title</label>
    <input type="text" name="title">

    <input type="file" name="thePic">

    <label>country</label>
    <select name="country">
        {{#each countries}}
        <option>{{this}}</option>
        {{/each}}
    </select>

    <label>city</label>
    <select name="city">
        {{#each cities}}
        <option>{{this}}</option>
        {{/each}}
    </select>
   
    <label>content</label>
    <textarea name="content" cols="30" rows="10"></textarea>

    <button>Create</button>
</form>